<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.userfragment.CatFeed">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/feedplace_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_activity_log_in_text_view_margin_top"
        android:fontFamily="@font/fzltxh"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text=""
        android:textColor="@color/login_activity_log_in_text_view_text_color"
        android:textSize="@dimen/login_activity_log_in_text_view_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <at.markushi.ui.CircleButton
        android:id="@+id/feed_button"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/cricle"
        app:cb_color="@color/light_grey"
        app:cb_pressedRingWidth="8dip"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feedtime_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:fontFamily="@font/fzltxh"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="次数   "
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:fontFamily="@font/fzltxh"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="最后投喂时间"
        android:textColor="@color/login_activity_log_in_text_view_text_color"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastfeedtime_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:fontFamily="@font/fzltxh"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text=""
        android:textColor="@color/login_activity_log_in_text_view_text_color"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>